html

    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")

        title NERV

        link(href='//fonts.googleapis.com/css?family=Merriweather+Sans:300|Roboto:300,500,700|Roboto+Condensed:400', rel='stylesheet', type='text/css')
        link(href="/static/css/bootstrap.min.css", rel="stylesheet", media="screen")
        link(href="/static/css/styles.css", rel="stylesheet", media="screen")

        script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
        script(src="/static/js/bootstrap.min.js")

    body
        .container
            .row
                .navbar.span12
                    .navbar-inner
                        a.brand NERV
                        ul.nav
                            li: a(href='#{u(".home")}') Home
                            li: a(href='#{u(".account_home")}') Accounts
                            li: a(href='#{u(".plan_home")}') Hosting Plans
                            li: a(href='#{u(".stripe_home")}') Stripe Plans
                            li: a(href='#{u(".logout")}') Logout

            success_messages = get_flashes('success')
            if success_messages
                .row: .span12
                    each message in success_messages
                        .alert.alert-success= message[1]

            notice_messages = get_flashes('notice')
            if notice_messages
                .row: .span12
                    each message in notice_messages
                        .alert= message[1]

            block content

